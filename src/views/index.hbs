<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1> Contactos</h1>
        </div>
        <div class="card-body">
            {{#if contacts}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                      <!--   <th scope="col">Email</th>
                        <th scope="col">Telefono</th> -->
                        <th  class=" d-flex justify-content-end" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contacts}}
                    
                        <tr class="text-break" >
                            <td class="align-middle"> {{firstname}}</td>
                            <td class="align-middle"> {{lastname}}</td>
                           <!--  <td class="align-middle"> {{email}}</td>
                            <td class="align-middle"> {{phone}}</td> -->
                            <td class=" align-middle d-flex justify-content-end"> <a href="/delete-contact/{{@key}}" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>
                        {{/each}}

                </tbody>
            </table>


            {{else}}
            <p>No Hay Contactos.</p>
            {{/if}}
        </!-->

        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input name="firstname" type="text" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input name="lastname" type="text" placeholder="Apellido" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input name="email" type="text" placeholder="Email" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input name="phone" type="text" placeholder="TelÃ©fono" class="form-control" autofocus>
                </div>
                <button class="btn btn-primary btn-block">
                    Agregar
                </button>
            </form>
        </div>
    </div>
</div>